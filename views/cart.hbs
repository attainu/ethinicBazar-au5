  <link rel="stylesheet" href="./../styleHome.css">
  <link rel="stylesheet" href="./../search.css">
</head>

<body>


  <nav class="navbar navbar-expand-md navbar-light fixed-top" style="background-color: #ffa500; height: 60px">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <a href="/" class="navbar-brand"><img src="./../icon.png" /> </a>
        <form class="form-inline my-2 my-lg-0">
          <div class="wrap">
            <div class="search mr-5" style="float: right">
              <input type="text" class="searchTerm" placeholder="What are you looking for?" />
              <button type="submit" style="background-color: #ffa500; border-color: #ffa500;" class="searchButton mt-1">
                <i class="fa fa-search"></i>
              </button>
            </div>
          </div>
        </form>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a href="/user" class="nav-link mr-3"><i class="fa fa-user"></i><span class="text-dark"
                style="font-size: 15px;"> My Account</span></a>
          </li>

          <li class="nav-item">
            <a href="/user/orderHistory" class="nav-link mr-3"><i class="fas fa-truck-loading"></i> <span
                class="text-dark" style="font-size: 15px;">Order
                History</span></a>
          </li>
          <li class="nav-item">
            <a href="/user/cart" class="nav-link "> <span class="badge badge-secondary">{{cartLength}}</span><i
                class="fa fa-shopping-cart"></i><span class="text-dark" style="font-size: 15px;">Cart</span></a>
          </li>

        </ul>
      </div>
    </div>
  </nav>

  <!-- header ends -->
  <div class="container">
    <h1 style="margin-top: 80px">Shopping Cart</h1>
    {{#if itemDeleted}}
    <div class="alert alert-success">One item deleted</div>
    {{/if}}


    <div style="margin-left:81%; height: 122px;">
      <h2 class="mr-auto" style="margin-top: 0">Subtotal: Rs. <strong><span class="finalPrice">0</span></strong>
      </h2>
      <form class="d-inline-block" action="/user/orderHistory" method="POST">
        <input type="hidden" value={{_id}} name="id">
        <button type="submit" id="buyNow" style="width: 150px;
    background-color: #2a1a5e;
    margin-left: 17%;
    margin-bottom: -21px;
    margin-top: -154px;" class="btn btn-primary">Buy
          Now</button>
      </form>

    </div>




    {{#each cart}}
    <div class="card mb-3 shadow p-3 mb-2 bg-white rounded">
      <div class="row no-gutters">
        <div class="col-md-3">
          <img src={{productImage}} class="card-img img-rounded" alt="..." style="height: 200px;width: 200px" />
        </div>
        <div class="col-md-9">
          <div class="card-body">
            <h3 class="card-title text-primary">{{productName}}</h3>
            <h5 class="card-title  text-dark mt-4">{{productDescription1}}</h5>
            <h5 class="card-title price d-inline-block text-primary mt-4">{{productPrice}}</h5>


            <form action="/user/cart/{{_id}}" method="POST">
              <button value={{_id}} style="margin-left: 83%" class="btn btn-danger d-inline-block ">Delete
                Item</button>
            </form>

          </div>
        </div>
      </div>
    </div>
    {{/each}}

    <!-- <div class="row">
        <div class="col-md-4">
          <img src="vivek.jpg" style="width: 400px" />
        </div>
      </div> -->
  </div>
  <div>
    <h5 class="text-white">Downloads</h5>
    <footer class="w-100 footer">
      <div class="container bottom_border">
        <div class="row">
